<h2> Statistics</h2>


    <%= @email.event_count('send') %> <br>
    <%= @email.event_count('open') %> <br>
    <%= @email.event_count('click') %> 

    <br>
    <h2>email types</h2>
  
		<% @email.email_types.each do |email_type| %>
		  <li>
		    <span class="email-type"><%= email_type %></span>:
		     <%=	@email.calculate_rate( 'click', email_type,) %>
		     <%= @email.calculate_rate( 'open', email_type) %>
		  </li>
		<% end %>


  